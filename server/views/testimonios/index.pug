extends ../layout/index
block contenido
    main.container.mt-5    
        h1.text-center.mb-5 #{pagina}

        .row    
            .col-md-12
                blockquote.text-center Lee Sobre Nuestros Clientes y sus Experiencias
                .row.testimoniales
                    each testimonio in testimonios
                        .col-md-6.col-lg-4.mb-4
                            .card
                                .card-body  
                                    blockquote.blockquote
                                    p.mb-0
                                        | #{testimonio.mensaje}
                                    footer.blockquote-footer
                                        | #{testimonio.nombre}

            .col-md-12
                h2.text-center Agrega tu Testimonio
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center=error.mensaje

                .row.justify-content-center
                    .col-md-8
                        form(action="/testimonios", method="POST")
                            .form-group 
                                label(for="nombre") Nombre
                                input(type="text", placeholder= "Tu Nombre", name="nombre", id="nombre", class="form-control", value=nombre)
                            .form-group 
                                label(for="correo") Correo Electr√≥nico
                                input(type="correo", placeholder= "Tu correo", name="correo", id="correo", class="form-control", value=correo)
                            .form-group 
                                textarea#mensaje(name="mensaje", rows="3", placeholder="Tu Mensaje", class="form-control")=mensaje
                            input.btn.btn-success.btn-block(type="submit", value="Agregar")